package com.jarvis.base;

import java.util.Scanner;
import java.math.*;

public class test_24_3 {

	public static int getMax(int[] arr)
	{
		int max = arr[0];//定义变量
		for (int x=1; x<arr.length; x++ )
		{
			if (arr[x]>max)
			{
				max = arr[x];
			}
		}
		return max;

